<Window x:Class="TourPlanner1.View.CreateTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner1.View"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Tour Name" Margin="0"/>
            <TextBox Name="TourName" Margin="5" Text="{Binding TourName}"/>
            <Label Content="Desciption" Margin="0"/>
            <TextBox Name="Description" Margin="5" Text="{Binding Description}"/>
            <Label Content="From" Margin="0"/>
            <TextBox Name="FromLocation" Margin="5" Text="{Binding FromLocation}"/>
            <Label Content="To" Margin="0"/>
            <TextBox Name="ToLocation" Margin="5" Text="{Binding ToLocation}"/>
            <Button Content="Create" Margin="20" Command="{Binding CreateTourCommand}"/>
        </StackPanel>
    </Grid>
</Window>
